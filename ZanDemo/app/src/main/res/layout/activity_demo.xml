<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <simonw.view.zan.ZanView
            android:id="@+id/v_zan"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="定时器模式： " />

        <Button
            android:id="@+id/btn_brgin"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="6dp"
            android:layout_toRightOf="@id/tv_1"
            android:text="开始" />

        <Button
            android:id="@+id/btn_end"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="6dp"
            android:layout_toRightOf="@id/btn_brgin"
            android:text="结束" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@id/tv_1"
            android:gravity="center_vertical"
            android:text="加赞： " />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignBottom="@id/tv_2"
            android:layout_margin="6dp"
            android:layout_toRightOf="@id/tv_1"
            android:text="+" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_2"
            android:gravity="center_vertical"
            android:singleLine="false"
            android:text="PS1：左右滑动，可以隐藏界面组件，这在直播app中常见功能
PS2:当直播结束，弹出结束页的时候，要手动关闭presenter和view，因为SurfaceView是在最上层的，否则会覆盖在别的view上面" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="6dp"
            android:text="弹出LIVE关闭页" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:text="直播结束！"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />
</FrameLayout>